{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",    
    "rootDir": "./",   
    "esModuleInterop": true,   
    "removeComments": true,
    "outDir": "./dist",                   
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,                           
    "skipLibCheck": true ,
    "types": ["jest", "node"]

  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
